<div class="container">
  <div class="d-flex justify-content-center h-100">
    <div class="card">
      <div class="card-header">
        <h3><%= link_to  "Sign Up", new_user_session_path %></h3>
        <%
=begin%>
        <div class="d-flex justify-content-end social_icon">
          <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
          <% if provider.to_s == "facebook" %>
          <span>
            <%= link_to omniauth_authorize_path(resource_name, provider) do %>
            <i class="fab fa-facebook-square"></i>
            <%end%>
          </span>
          <% end %>

          <% if provider.to_s == "google_oauth2" %>
          <span>
            <%= link_to omniauth_authorize_path(resource_name, provider) do %>
            <i class="fab fa-google-plus-square"></i>
            <%end%>
          </span>
          <% end %>
          <% end %>
          <% end %>
        </div>
        <%
=end%>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="input-group form-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-user"></i></span>
          </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "username" %>
        </div>
        <div class="input-group form-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-key"></i></span>
          </div>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "password" %>
        </div>
        <div class="input-group form-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-key"></i></span>
          </div>
          <%= f.password_field :password_confirmation, autocomplete: "confirm-password",class: "form-control", placeholder: "confirm-password" %>
        </div>

        <div class="form-group">
          <%= f.submit "Sign up", class: "btn float-right login_btn"  %>
        </div>
        <% end %>
      </div>
      <div class="card-footer">
        <div class="d-flex justify-content-center links">
          You have an account?
          <%= link_to 'Sign In', new_user_session_path %>
        </div>
      </div>
    </div>
  </div>
</div>