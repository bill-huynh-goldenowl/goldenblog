<% flash.each do |type, msg| %>
  <div style="color: green">
    <%= msg %>
  </div>
<%end %>
<% if !current_user %>
  <%= link_to  "Login", new_user_session_path %>
<%else%>
  <%= link_to  "Logout", destroy_user_session_path %>
  <%= link_to  "Profile", users_show_path %>
<% end %>

<%= link_to  "Post", posts_path %>

<% if current_user.is_admin %>
  <%= link_to  "Categories", categories_path %>
  <%= link_to "Users list", users_index_path %>
<% end %>
<div class="container-fluid" style="display: flex; flex-wrap: wrap;">
  <% if @posts.length > 0 %>
    <% @posts.each do |post| %>
      <div class="card" style="width: 18rem; background: #f1f1f1 !important; margin: 15px">
      <img class="card-img-top" src=<%= post.images %> alt="Card image cap" width="150" height="150">
      <div class="card-body">
        <h5 class="card-title"><%= post.title %></h5>
        <p class="card-text"><%= post.content.length > 50 ? post.content.slice(0, 50).concat("...") : post.content %></p>
        <%= link_to  "Detail", "/posts/#{post.id}", class: "btn btn-primary" %>
        <span class='parent-likes'>
          <span class='like_count_<%= post.id %>' >
            <%= post.get_likes.size %> &#128591
          </span>
          <div class="react-post-<%= post.id %>">
            <% if current_user.liked? post %>
              <div> 
                <%= link_to 'Unlike', like_post_path(post, 'unlike'), class: 'preached-btn', method: :put, remote: :true  %>  
              </div>
            <% else %>
              <div>
                <%= link_to 'Like', like_post_path(post, 'like'), class: 'preached-btn', method: :put, remote: :true %> 
              </div>
            <% end %>
          </div>
        </span>
      </div>
    </div>
    <% end %>
  <% end %>
</div>
