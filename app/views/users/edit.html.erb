<div class="container" style="padding: 20px 0;">
  <h1 style="color: #f1f1f1; text-align: center;">Profile</h1>
  <% flash.each do |type, msg| %>
    <div style="color: red">
      <%= msg %>
    </div>
  <% end %>
  <%= form_with model: @user, url: update_path(@user.id) do |form| %>

    <div class="form-group" style="color: #f1f1f1">
      <%= form.label :first_name %>
      <%= form.text_field( :first_name, class: "form-control") %>
    </div>

    <div class="form-group" style="color: #f1f1f1">
      <%= form.label :last_name %>
      <%= form.text_field(:last_name, class: "form-control") %>
    </div>

    <div class="form-group" style="color: #f1f1f1">
      <%= form.label :fullname %>
      <%= form.text_field(:fullname, class: "form-control") %>
    </div>

    <div class="form-group" style="color: #f1f1f1">
      <%= form.label :phone %>
      <%= form.text_field(:phone, class:"form-control") %>
    </div>

    <div class="form-group" style="color: #f1f1f1">
      <%= form.label :location %>
      <%= form.text_field(:location, class: "form-control") %>
    </div>

    <div class="actions">
      <%= submit_tag("Update", class: "btn btn-primary") %>
    </div>
  <% end %>
</div>

<%= javascript_pack_tag 'enableSumit' %>
