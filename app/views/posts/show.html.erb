<div class="container-fluid" style="background: #f1f1f1;
border-radius: 35px;
padding: 15px;">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= @post.content %>
  </p>

  <p>
    <strong>Images:</strong>
    <%= image_tag(@post.images, size:"200x200") %>
  </p>

  <p>
    <strong>Love:</strong>
    <%= @post.love %>
  </p>

  <div class="interact">
    <ul class="listInteract" style="">
      <li><i class="fa fa-heart" style="font-size: 25px; color: #e80b0b"></i></li>
      <li><i class="fab fa-facebook" style="font-size: 25px;"></i></li>
    </ul>
  </div>

  <h3>Comments</h3>
  <div id="comments">
    <%= render partial: "comments/form", locals: {commentable: @post} %>
    <%= render @post.comments.where(parent_id: nil) %>
  </div>
</div>

<% if current_user.id == @post.user_id %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>
<%= link_to 'Back', posts_path %>