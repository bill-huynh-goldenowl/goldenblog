<div class="container-fluid" style="background: #f1f1f1;
padding: 20px;
border-radius: 25px;">
  <%= form_with(model: post, local: true) do |form| %>
    <div class="field">
      <%= form.label(:post_category, 'Select category')%>
      <%= select_tag(:category_id, options_for_select([["Choosing...", 0],*@categories.map { |category| [category.title, category.id] }],@post.category_id)) %>
    </div>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>

    <div class="field">
      <%= form.label :content %>
      <%= form.cktext_area :content %>
    </div>

    <div class="field">
      <%= form.label :images %>
      <%= form.file_field :images, id: 'input-image-file', accept: 'image/*' %>
    </div>

    <div class="imagePreview" id="imagePreview">
      <img src='' alt='Image preview' class='imagePreview__image'>
      <span class="imagePreview__defaultText">Image Preview</span>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>

<%= javascript_pack_tag "preview" %>