<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label(:post_category, 'Select category')%>
  <%= select_tag(:category_id, options_for_select([["Choosing...", 0],*@categories.map {|category| [category.title, category.id]}],@post.categories.first.id || 0)) %>
  </div>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :images %>
    <%= form.file_field :images, id: 'input-image-file', accept: 'image/*' %>
  </div>

  <div class="imagePreview" id="imagePreview">
    <img src='' alt='Image preview' class='imagePreview__image'>
    <span class="imagePreview__defaultText">Image Preview</span>
  </div> 

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= javascript_pack_tag "preview" %>